{
  "tool_name": "get_customer_accounts",
  "endpoint": "/v1.0.0/party/customers/{customerId}/arrangements",
  "required_inputs": [
    "customerId"
  ],
  "optional_inputs": [
    { "name": "arrangementStatus",  "send_to_api": false },
    { "name": "productDescription", "send_to_api": false }
  ],
  "filtering_rules": [
    {
      "input_param":    "arrangementStatus",
      "response_field": "arrangementStatus",
      "filter_type":    "exact",
      "case_sensitive": false
    },
    {
      "input_param":    "productDescription",
      "response_field": "productDescription",
      "filter_type":    "fuzzy_substring",
      "threshold":      75,
      "method":         "partial"
    }
  ]
}
