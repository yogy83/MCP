{
  "tool_name": "get_account_transactions",
  "endpoint": "/v1.0.0/holdings/accounts/{accountId}/transactions",
  "required_inputs": [
    "accountId"
  ],
  "optional_inputs": [
    { "name": "startDate",          "send_to_api": false },
    { "name": "endDate",            "send_to_api": false },
    { "name": "transactionName",    "send_to_api": false },
    { "name": "transactionAmount",  "send_to_api": false }
  ],
  "filtering_rules": [
    {
      "input_param":    "startDate",
      "response_field": "bookingDate",
      "filter_type":    "date_from"
    },
    {
      "input_param":    "endDate",
      "response_field": "bookingDate",
      "filter_type":    "date_to"
    },
    {
      "input_param":    "transactionName",
      "response_field": "transactionName",
      "filter_type":    "fuzzy_substring",
      "threshold":      70,
      "method":         "partial"
    },
    {
      "input_param":    "transactionAmount",
      "response_field": "transactionAmount",
      "filter_type":    "numerical_fuzzy",
      "tolerance":      0.20
    }
  ]
}
